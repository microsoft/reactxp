{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "declaration": false,
    "noResolve": false,
    "jsx": "react",
    "reactNamespace": "RX",
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "types" : ["lodash", "react", "react-dom"],
    "strict": true,
    "lib": [
        "es2015.promise",
        "es2015.iterable",
        "es2018.promise",
        "es5",
        "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
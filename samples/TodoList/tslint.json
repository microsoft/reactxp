{
    "rulesDirectory": [
        "./node_modules/tslint-microsoft-contrib",
        "./node_modules/resub/dist/tslint",
        "./node_modules/reactxp/dist/tslint",
        "./node_modules/tslint-react/rules"
    ],
    "rules": {
        // Rules from reactxp
        "grouped-import": true,
        "no-unreferenced-styles": true,
        "incorrect-this-props": true,

        // Rules from resub
        "override-calls-super": [
            true,
            "componentWillMount",
            "componentMounting",
            "componentDidMount",
            "componentWillReceiveProps",
            "componentWillUpdate",
            "componentDidUpdate",
            "componentWillUnmount"
        ],

        // Rules from tslint-microsoft-contrib
        "function-name": [true, {
            "method-regex": "^[a-z]\\w+$",
            "private-method-regex": "^_[a-z]\\w+$",
            "protected-method-regex": "^[a-z_]\\w+$",
            "static-method-regex": "^[a-z]\\w+$",
            "function-regex": "^\\w+$"
        }],
        "no-delete-expression": true,
        "no-document-domain": true,
        "no-disable-auto-sanitization": true,
        "no-exec-script": true,
        "no-function-constructor-with-string-args": true,
        "no-string-based-set-immediate": true,
        "no-string-based-set-interval": true,
        "no-string-based-set-timeout": true,
        "react-no-dangerous-html":true,
        "react-this-binding-issue": [true, { "allow-anonymous-listeners": true }],
        "no-inner-html":true,
        "no-document-write":true,
        "insecure-random": true,
        "no-reserved-keywords": true,

        // Rules that are built in to tslint
        "align": [true, "statements"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "class-name": true,
        "curly": true,
        "eofline": true,
        "file-header": [true, "(Copyright: Microsoft \\d{4}|@copyright Â© Microsoft. All rights reserved.)"],
        "forin": true,
        "indent": [true, "spaces"],
        "label-position": true,
        "max-line-length": [true, 140],
        "member-access": [true, "no-public"],
        "new-parens": true,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines":  [true],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-empty": true,
        "no-eval": true,
        "no-inferrable-types": [true],
        "no-invalid-this": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "one-line": [true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "ordered-imports": [true,
        {
            "module-source-path": "basename"
        }],
        "quotemark": [true, "single", "jsx-single"],
        "radix": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "triple-equals": [true],
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ],

        "arrow-return-shorthand": [true],
        "no-angle-bracket-type-assertion": true,
        "no-trailing-whitespace": true,
        "one-variable-per-declaration": [true]
    }
}
